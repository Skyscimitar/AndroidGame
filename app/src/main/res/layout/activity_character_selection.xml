        <ImageView
            android:id="@+id/character1_image"
            android:layout_width="@dimen/character_selection_image_size"
            android:layout_height="@dimen/character_selection_image_size"
            android:layout_below="@+id/characeter1_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/character1"
            android:contentDescription="@string/character_image_placeholder" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorSecondaryDark"
            android:layout_margin="@dimen/character_selection_text_margin"
            android:id="@+id/characeter1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/character_name_placeholder" />

        <TextView
            android:textColor="@color/colorSecondary"
            android:layout_margin="@dimen/character_selection_text_margin"
            android:id="@+id/characeter1_atk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/character1_image"
            android:text="@string/character_stat_placeholder" />

        <TextView
            android:textColor="@color/colorSecondary"
            android:layout_margin="@dimen/character_selection_text_margin"
            android:id="@+id/characeter1_dfs"
