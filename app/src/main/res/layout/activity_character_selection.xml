<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterSelectionActivity">

    <RelativeLayout
        android:id="@+id/character1"
        android:layout_width="@dimen/character_selection_frame_size"
        android:layout_height="@dimen/character_selection_frame_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="156dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/character_selected_character_background_border"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="116dp">

        <ImageView
            android:id="@+id/character1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/character_image_placeholder"/>

        <SurfaceView
            android:id="@+id/character1_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/character2"
        android:layout_width="@dimen/character_selection_frame_size"
        android:layout_height="@dimen/character_selection_frame_size"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/character1"
        android:layout_marginStart="17dp"
        android:background="@drawable/character_selection_background_border"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="260dp">

        <ImageView
            android:id="@+id/character2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/character_image_placeholder"/>

        <SurfaceView
            android:id="@+id/character2_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/character3"
        android:layout_width="@dimen/character_selection_frame_size"
        android:layout_height="@dimen/character_selection_frame_size"
        android:layout_alignStart="@+id/character2"
        android:layout_alignTop="@+id/character4"
        android:background="@drawable/character_selection_background_border"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/character3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/character_image_placeholder"/>

        <SurfaceView
            android:id="@+id/character3_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/character4"
        android:layout_width="@dimen/character_selection_frame_size"
        android:layout_height="@dimen/character_selection_frame_size"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/character1"
        android:layout_marginTop="39dp"
        android:background="@drawable/character_selection_background_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/character4_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/character_image_placeholder"/>

        <SurfaceView
            android:id="@+id/character4_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="@string/btn_confirm_character"/>

</RelativeLayout>