<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:textColor="@color/colorSecondaryDark"
        android:id="@+id/leaderboard_user_name"
        android:textSize="@dimen/leaderboard_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/leaderboard_text_margin"
        android:text="@string/player_name_placeholder" />

    <TextView
        android:textColor="@color/colorSecondaryDark"
        android:id="@+id/leaderboard_user_score"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/leaderboard_text_size"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/leaderboard_text_margin"
        android:text="@string/player_score_placeholder" />

</RelativeLayout>